extends layout

block content
  h1= title
  p Welcome to #{title}

  // Wrapper
  #wrapper
    // USER LIST
    h2 User List
    #userList
      table
        thead
          th UserName
          th Email
          th Delete
        tbody
        // /USER LIST
    // /WRAPPER
    // ADD USER
    h2 Add User
    #addUser
      fieldset
        input#inputUserName(type='text', placeholder='Username')
        input#inputUserEmail(type='text', placeholder='Email')
        br
        input#inputUserFullname(type='text', placeholder='Full Name')
        input#inputUserAge(type='text', placeholder='Age')
        br
        input#inputUserLocation(type='text', placeholder='Location')
        input#inputUserGender(type='text', placeholder='gender')
        br
        button#btnAddUser Add User
    h2 Sentence List
    #sentenceList
      ul
    h2 Add Sentence
    #addSentence
    fieldset
      input#inputSnetenceContent(type='text', placeholder='Content')
      br
      button#btnAddSentence Add Sentence